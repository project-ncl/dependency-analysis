  <packaging>pom</packaging>
  <name>jibx-parent - JiBX parent project</name>
  <description>JiBX parent shared settings</description>
  
  <url>http://www.jibx.org</url>

  <organization>
    <name>jibx.org</name>
    <url>http://www.jibx.org</url>
